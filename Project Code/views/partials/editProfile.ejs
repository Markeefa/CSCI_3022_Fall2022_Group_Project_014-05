
<form action="/profile" method="POST">
<div class="modal" id="profileModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modal-title">Edit Profile</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="form-floating row g-3 align-items-center">
            <div class="col-4">
                <label>First Name</label>
            </div>
            <div class="col-8">
                <input type="text" name="first_name" id="first_name" class="form-control" required/>
            </div>
        </div>
        
        <div class="form-floating row g-3 mt-3 align-items-center">
          <div class="col-4">
              <label>Last Name</label>
          </div>
          <div class="col-8">
              <input type="text" name="last_name" id="last_name" class="form-control" required/>
          </div>
      </div>
      
      <div class="form-floating row g-3 mt-3 align-items-center">
        <div class="col-4">
            <label>New Password</label>
        </div>
        <div class="col-8">
            <input type="password" name="password" id="password" class="form-control" required/>
        </div>
    </div>
    <div class="form-floating row g-3 mt-1 align-items-center">
      <div class="col-4">
          <label>Confirm Password</label>
      </div>
      <div class="col-8">
          <input type="password" name="confirm_password" id="confirm_password" class="form-control" required/>
      </div>
  </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</form>